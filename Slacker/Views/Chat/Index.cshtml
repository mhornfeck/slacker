@{
    ViewBag.Title = "#Slacker";
}

<div class="container js-login-container">
    <h2>#Slacker</h2>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control js-username-input" placeholder="Enter a username">
                </div>
                <button type="button" class="btn btn-default js-btn-set-username">Set</button>
            </div>
        </div>
    </div>
</div>
<div class="container js-chat-container hidden">
    <h2>#Slacker</h2>
    <div class="identification">Chatting as: <span class="js-username-label"></span></div>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control js-message-input" placeholder="Enter a message">
                </div>
                <button type="button" class="btn btn-default js-btn-send">Send</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 js-discussion-container discussion-container">
            <ul class="js-discussion-list discussion-list"></ul>
        </div>
    </div>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/slacker-login.js"></script>
    <script src="~/Scripts/slacker.js"></script>
}